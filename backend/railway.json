{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "liveness": {
        "initialDelaySeconds": 5,
        "periodSeconds": 10
      }
    }
  }
}
