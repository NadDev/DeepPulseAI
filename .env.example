# ============================================
# CRBOT - CONFIGURATION TEMPLATE
# Copie ce fichier en .env et configure-le
# ATTENTION: JAMAIS commit le .env réel!
# ============================================

# ===== ENVIRONMENT =====
ENV=development
# Options: development, staging, production
DEBUG=true

# ===== API KEYS & SECRETS =====
# CRITIQUES - À générer pour production
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_ENCRYPTION_KEY=your-encryption-key-for-broker-credentials

# ===== DATABASE =====
# Development (SQLite)
DATABASE_URL=sqlite:///./crbot.db

# Production (PostgreSQL) - à activer en prod
# DATABASE_URL=postgresql://user:password@hostname:5432/crbot_prod

# ===== CACHE (Redis) =====
REDIS_URL=redis://localhost:6379/0
# Production: REDIS_URL=redis://:password@redis-hostname:6379/0

# ===== BROKER CREDENTIALS (CHIFFRÉ!) =====
# JAMAIS en plain text! Utiliser AWS Secrets Manager ou Vault
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=true
# BINANCE_TESTNET=false pour production réelle

# Optionnel - MetaTrader/autres brokers
METATRADER_LOGIN=your-login
METATRADER_PASSWORD=your-password
METATRADER_SERVER=your-server

# ===== SECURITY =====
# JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# CORS (restricter en production!)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Production: ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ===== MONITORING & LOGGING =====
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Sentry (error tracking) - optionnel
SENTRY_DSN=

# ===== EXTERNAL SERVICES =====
# LLM (FEATURE 5.1 - optionnel)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Alternative Claude
ANTHROPIC_API_KEY=

# ===== RISK MANAGEMENT =====
# Limites de trading (À personnaliser!)
MAX_DAILY_LOSS_PERCENT=5.0
MAX_DRAWDOWN_PERCENT=10.0
MAX_TRADES_PER_DAY=10
MAX_POSITION_SIZE_PERCENT=5.0

# ===== FEATURES FLAGS =====
FEATURE_ML_PREDICTIONS=true
FEATURE_REAL_TRADING=false
FEATURE_PAPER_TRADING=true
FEATURE_WEBHOOK_ALERTS=false
FEATURE_REPORTS=true
FEATURE_WATCHLIST=true

# ===== RECOMMENDATION CRYPTO FEATURE =====
# Enable/disable daily AI-powered crypto recommendations
RECOMMENDATION_ENABLE=true

# Time for daily recommendation run (UTC format HH:MM)
RECOMMENDATION_DAILY_TIME=08:00

# Enable/disable market data background sync (updates every 4 hours)
MARKET_DATA_UPDATE_ENABLED=true

# Number of cryptos to bootstrap (top N by market cap from Binance)
BOOTSTRAP_CRYPTO_COUNT=200

# Enable monitoring and detailed logging for recommendation engine
MONITORING_ENABLED=true

# ===== NOTIFICATIONS =====
# Email alerts
EMAIL_ENABLED=false
EMAIL_FROM=noreply@crbot.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# Discord webhooks
DISCORD_WEBHOOK_ALERTS=
DISCORD_WEBHOOK_ERRORS=

# ===== BACKUP & PERSISTENCE =====
# Database backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE_HOURS=24
BACKUP_RETENTION_DAYS=30

# ===== DEPLOYMENT =====
# Docker
DOCKER_REGISTRY=your-registry
DOCKER_IMAGE_TAG=latest

# Kubernetes (si applicable)
KUBE_NAMESPACE=default
KUBE_REPLICAS=1
